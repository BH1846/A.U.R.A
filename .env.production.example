# ============================================
# AURA Production Environment Configuration
# ============================================
# Copy this file to .env and fill in production values

# ============ Database Configuration ============
# Neon PostgreSQL Connection (Production)
DATABASE_URL=postgresql://username:password@host.region.aws.neon.tech/database?sslmode=require

# ============ API Keys (REQUIRED) ============
# OpenAI API Key for GPT-4 evaluation
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub Personal Access Token for repository cloning
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# LLM Provider (groq for speed, openai for quality)
LLM_PROVIDER=groq

# Groq API Key (if using Groq)
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============ Security ============
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-minimum-32-characters-long-production-key

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60

# ============ CORS Configuration ============
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============ File Storage Paths ============
# Production paths (must exist and have proper permissions)
REPOS_DIR=/var/www/aura/data/repos
REPORTS_DIR=/var/www/aura/data/reports
TEMP_DIR=/var/www/aura/data/temp
VECTOR_DB_DIR=/var/www/aura/data/vector_db

# ============ Application Settings ============
# Environment mode
ENVIRONMENT=production

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# API Settings
API_TIMEOUT=300
MAX_WORKERS=4

# ============ Feature Flags ============
# Enable/disable optional features
ENABLE_RAG=false
ENABLE_CODE_PARSING=true
ENABLE_FRAUD_DETECTION=false

# ============ Monitoring & Alerts ============
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Email alerts (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=alerts@yourdomain.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL=admin@yourdomain.com

# ============ Backup Configuration ============
# Automatic backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# ============ Performance Tuning ============
# Database connection pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Uvicorn workers (recommended: 2 x CPU cores)
WORKERS=4

# Request timeout (seconds)
REQUEST_TIMEOUT=300
