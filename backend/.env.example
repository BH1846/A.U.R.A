# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
TEMPERATURE=0.7

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# Database Configuration
# Production: Use Neon PostgreSQL
DATABASE_URL=postgresql://user:password@host.region.aws.neon.tech/dbname?sslmode=require
# Development: Use SQLite
# DATABASE_URL=sqlite:///./aura.db

# File Storage (Use absolute paths for production)
# Production paths:
REPOS_DIR=/var/www/aura/data/repos
REPORTS_DIR=/var/www/aura/data/reports
TEMP_DIR=/var/www/aura/data/temp
CHROMA_DB_PATH=/var/www/aura/data/vector_db
# Development paths (uncomment for local dev):
# REPOS_DIR=../data/repos
# REPORTS_DIR=../data/reports
# TEMP_DIR=../data/temp
# CHROMA_DB_PATH=../data/vector_db

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Evaluation Configuration
MAX_QUESTIONS=10
MIN_QUESTIONS=6
EVALUATION_TIMEOUT=300

# Scoring Weights
WEIGHT_UNDERSTANDING=0.4
WEIGHT_REASONING=0.3
WEIGHT_COMMUNICATION=0.2
WEIGHT_LOGIC=0.1

# Security
SECRET_KEY=generate_a_secure_random_key_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/www/aura/logs/aura.log

# Worker Configuration (for production)
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
